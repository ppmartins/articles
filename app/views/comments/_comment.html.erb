<div class="media">
  <div class="media-body">
    <small>
<!--- <%= comment.user.email %> commented <%= time_ago_in_words(comment.created_at) %> ago-->
      <% if user_is_authorized_for_comment?(comment) %>
<!--        <%= link_to "Delete", [@article, comment], method: :delete %> -->
        <%= link_to "Delete", [comment.article, comment], method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, remote: true %>
      <% end %>
    </small>
    <p id="comment-<%= comment.id %>"><%= comment.body %></p>
  </div>
</div>
