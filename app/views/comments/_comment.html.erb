<div class="media">
  <div class="media-body">
    <small>
      <%= comment.user.email %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if user_is_authorized_for_comment?(comment) %>
        <%= link_to "Delete", topic_article_comment_path(@article.topic, @article, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
</div>
