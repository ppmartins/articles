<h1>Most recent Articles<h1>
<% @articles.limit(10).each do |article| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to article.title, topic_article_path(article.topic, article) %> <small>(<%= link_to article.topic.name, topic_path(article.topic) %>)</small>
      </h4>
    </div>
  </div>
<% end %>

<h2>Want to add an article?</h2>
<p>
  <strong>Choose a topic to add it to:</strong>
  <ul>
    <% @topics.each do |topic| %>
      <li><%= link_to topic.name, topic %> --> <%= topic.articles.count %> article(s)</li>
    <% end %>
  </ul>
  <strong>Or <%= link_to 'create a new topic', new_topic_path %></strong>
</p>
