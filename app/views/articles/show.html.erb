<h1><%= @article.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @article.body %></p>
    <div>
      <h3>Comments</h3>
      <%= render @article.comments %>
    </div>
    <% if current_user %>
      <%= render 'comments/form', comment: Comment.new, article: @article %>
    <% end %>
  </div>
  <% if current_user && current_user == @article.user %>
    <div class="col-md-4">
      <%= link_to "Edit", edit_topic_article_path(@article.topic, @article), class: 'btn btn-success' %>
      <%= link_to "Delete", topic_article_path(@article.topic, @article), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this article?'} %>
    </div>
  <% end %>
</div>
